/* components/main-card.wxss */
.main-card .img{
  width: 50px;
}
.main-card .title{
  font-size: 16px;
  color: #333;
  font-weight: bold;
  margin: 0 0 0 5px;
}
.main-card .desc{
  font-size: 14px;
  color: #b8b8b8;
  padding: 6px 0 0 0;
  display: -webkit-box;
  overflow: hidden;  
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}